

.forecast-list {
    display:flex;
    background-color:#1F97D7;
}

.forecast-item {    
    display:flex;
    width: 120rpx;
    flex-shrink: 0;
    flex-direction:column;
    align-items:center;
    background-color:#1F97D7;
}

.forecast-type {
  font-size: 40rpx;
  line-height: 82rpx;
  color: rgba(255, 255, 255, 255);
}

.forecast-type.active::after{
  content:'';
  display:block;
  width: 50%;
  height: 2rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.newsitem{
 width: 95%;
 height: 230rpx;
 display: flex;
 flex-direction: row;
 margin: 10rpx;
 border-bottom: 2rpx solid rebeccapurple
}

.img-wrap{
 margin-left: 10rpx;
 width: 300rpx;
 height: 200rpx;
 overflow: hidden;
}
.img{
 width: 100%;
 height: 200rpx;
}
.news-text{
 width: 450rpx;
 display: flex;
 flex-direction: column;
 padding: 20rpx;
}
.bottext{
 width: 100%;
 height: 100rpx;
 display: flex;
 align-items: flex-end;
 font-size: 20rpx;
}
.author{
 margin-right: 50rpx;
}
